{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "~app/*": ["./src/*"],
      "~chat/*": ["./src/chat/*"],
      "~auth/*": ["./src/auth/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
